#!/bin/bash

# This is the name of the subdirectory of ASIPMeisterProjects.
export PROJECT_NAME=brownie

# The name of ASIP Meisters *.pdb file.
export CPU_NAME=browstd32

# Location of dlxsim
export DLXSIM_DIR=/home/asip00/epp/dlxsimbr_Laboratory

# Name of the ISE directory inside your project directory
export ISE_NAME=ISE_Framework

# This is the path of the subdirectory of ASIPMeisterProjects. i.e. of PROJECT_NAME 
export ASIPMEISTER_PROJECTS_DIR=${HOME}/ASIPMeisterProjects

###############################
###  Seldom changed values  ###
###############################

# Makefiles
export MKIMG_DIR=/home/asip00/epp/mkimg

# ModelSim Direcotory for your project
export MODELSIM_DIR=${PROJECT_DIR}/ModelSim

export PROJECT_DIR=${ASIPMEISTER_PROJECTS_DIR}/${PROJECT_NAME}

# ASIPmeister meister Direcotory for your project
export MEISTER_DIR=${PROJECT_DIR}/meister

# ISE Xilinx Direcotory for your project
export ISE_DIR=${PROJECT_DIR}/${ISE_NAME}

export COMPILER_NAME=brownie32-elf-gcc

export ASSEMBLER_NAME=brownie32-elf-as

export LINKER_NAME=brownie32-elf-ld

export COMPILER_DIR=${MEISTER_DIR}/${CPU_NAME}.swgen/bin

export PATH=${MEISTER_DIR}/${CPU_NAME}.swgen/bin:$PATH



#!/bin/bash

# This is the name of the subdirectory of ASIPMeisterProjects.
export PROJECT_NAME=session8_area_16_v3

# The name of ASIP Meisters *.pdb file.
export CPU_NAME=dlx_basis

# This is the prefix for the compiler name.
# The real compiler name will get a "cc" attached.
# You have to use a different compiler prefix for every project!
export COMPILER_PREFIX=pasta

# Location of dlxsim
export DLXSIM_DIR=/Software/epp/dlxsim

# Name of the ISE directory inside your project directory
export ISE_NAME=ISE_Framework

###############################
###  Seldom changed values  ###
###############################

export ASIPMEISTER_PROJECTS_DIR=${HOME}/ASIPMeisterProjects/Sven

export PROJECT_DIR=${ASIPMEISTER_PROJECTS_DIR}/${PROJECT_NAME}

export MEISTER_DIR=${PROJECT_DIR}/meister

export MODELSIM_DIR=${PROJECT_DIR}/ModelSim

export ISE_DIR=${PROJECT_DIR}/${ISE_NAME}/session8_area_16_v3

export MKIMG_DIR=/home/asip02/ASIPMeisterProjects/mkimg_16reg/

export COSY_DIR=/Software/epp/CoSy

export COMPILER_NAME=${COMPILER_PREFIX}cc

